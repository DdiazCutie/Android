<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Oferta">

    <ImageView
        android:id="@+id/imageCompu"
        android:layout_width="119dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tableLayout1"
        app:layout_constraintTop_toBottomOf="@+id/descuento20"
        app:srcCompat="@drawable/descuento10" />

    <ImageView
        android:id="@+id/descuento20"
        android:layout_width="118dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.727"
        app:layout_constraintStart_toEndOf="@+id/tableLayout2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/descuento20" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tiendacompuplace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oferta del mes:"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="84dp" />

            <TextView
                android:id="@+id/tcompu"
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:text="10% descuento"
                tools:layout_editor_absoluteX="93dp"
                tools:layout_editor_absoluteY="84dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/direccioncompu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tienda:"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="116dp" />

            <TextView
                android:id="@+id/dcompu"
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:text="C.C Compu Palace"
                tools:layout_editor_absoluteX="93dp"
                tools:layout_editor_absoluteY="84dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="249dp"
        android:layout_height="67dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp">

        <TableRow
            android:layout_width="268dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tiendacentro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oferta del mes:"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="84dp" />

            <TextView
                android:id="@+id/tc"
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:text="20% decuento"
                tools:layout_editor_absoluteX="93dp"
                tools:layout_editor_absoluteY="84dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/direccioncentro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tienda:"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="116dp" />

            <TextView
                android:id="@+id/dc"
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:text="C.C Centro Lima"
                tools:layout_editor_absoluteX="93dp"
                tools:layout_editor_absoluteY="84dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>


</android.support.constraint.ConstraintLayout>

